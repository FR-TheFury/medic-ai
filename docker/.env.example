
# Configuration d'exemple pour les variables d'environnement

# Base de données
DATABASE_URL=mysql+pymysql://root:@mysql:3306/dwh
MYSQL_DATABASE=dwh
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_ALLOW_EMPTY_PASSWORD=yes

# Redis
REDIS_URL=redis://redis:6379

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ETL_URL=http://localhost:8001
REACT_APP_TECHNICAL_URL=http://localhost:8002

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
GF_DATABASE_TYPE=mysql
GF_DATABASE_HOST=mysql:3306
GF_DATABASE_NAME=dwh
GF_DATABASE_USER=root
GF_DATABASE_PASSWORD=

# Sécurité
JWT_SECRET_KEY=your-secret-key-here
API_SECRET_KEY=your-api-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Pays spécifiques
DEPLOYMENT_COUNTRY=us
ENABLE_TECHNICAL_API=true
ENABLE_DATAVIZ=true
